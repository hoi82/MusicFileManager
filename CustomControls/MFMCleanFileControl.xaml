<UserControl x:Class="MusicFileManager.CustomControls.MFMCleanFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{Binding Background, ElementName=userControl}">
        <WrapPanel x:Name="wpMain" ClipToBounds="{Binding ClipToBounds, ElementName=userControl}" ItemHeight="{Binding ItemSize, ElementName=userControl, Mode=OneWay}" ItemWidth="{Binding ItemSize, ElementName=userControl, Mode=OneWay}" Margin="0,30,0,0"/>
        <Label x:Name="lbTitle" Content="{Binding Title, ElementName=userControl}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Height="30" FontSize="16"/>
        <Popup x:Name="popItem">
            <Grid x:Name="grdItemContent" Height="100" Width="300" Background="White">
                <TextBlock x:Name="tblItemContent" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontFamily="{Binding FontFamily, ElementName=userControl}" FontSize="{Binding FontSize, ElementName=userControl}"/>
            </Grid>
        </Popup>
    </Grid>
</UserControl>
