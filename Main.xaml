<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
        xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="MusicFileManager.MainWindow"        
        Title="MainWindow" Height="500" Width="1024" Background="#FF3C3C3C" WindowStyle="None" ResizeMode="CanResizeWithGrip" Loaded="Window_Loaded">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            GlassFrameThickness="0,0,0,1"
                            ResizeBorderThickness="5" 
                            />
    </shell:WindowChrome.WindowChrome>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1" Margin="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <Label x:Name="lblLocation" Content="" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="300" Foreground="#FF7D7D7D"/>
                <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="355,54,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click"/>
                <Button x:Name="btnClean" Content="Clean Up" HorizontalAlignment="Left" Margin="899,399,0,0" VerticalAlignment="Top" Width="75" Click="btnClean_Click"/>
            </Grid>
        </ScrollViewer>
        <Button x:Name="btnExit" Content="Button" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" Width="20" Click="btnExit_Click" Height="20"/>
    </Grid>
</Window>
